<p id="notice"><%= notice %></p>

<h1>Screenings</h1>

<table>
  <thead>
    <tr>
      <th class="index"><%= sort_link "movie_id", "Movie" %></th>
      <th class="index"><%= sort_link "room_id" %></th>
      <th class="index"><%= sort_link "date" %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @screenings.each do |screening| %>
      <tr>
        <td><%= screening.movie.title %></td>
        <td><%= screening.room_id %></td>
        <td><%= screening.date %></td>
        <td><%= link_to 'Show', screening, :class => "btn btn-outline-secondary minebtn btn-sm" %></td>
        <td><%= link_to 'Edit', edit_screening_path(screening), :class => "btn btn-outline-warning minebtn btn-sm" %></td>
        <% if false %>
          <td><%= link_to 'New Reservation', {:controller => "reservations", :action => "new", :current_screening_id => screening.id}, :class => "btn btn-outline-success minebtn btn-sm" %></td>
        <% end %>
        <td><%= link_to 'Destroy', screening, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-outline-danger minebtn btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Screening', new_screening_path, :class => "btn btn-outline-success minebtn btn-sm" %>
