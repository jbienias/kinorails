<p id="notice"><%= modified_notice %></p>

<h1>Favourite Movies</h1>

<table class="table table-stripped table-hover index indexborder">
  <thead>
    <tr>
      <th class="index"><%= sort_link "user_id", "User" %></th>
      <th class="index"><%= sort_link "movie_id", "Movie" %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @favourite_movies.each do |favourite_movie| %>
      <tr>
        <td><%= favourite_movie.user.username %></td>
        <td><%= favourite_movie.movie.title %></td>
        <td align = "right">
        <button type="button" class="btn btn-outline-danger minebtn btn-sm" data-toggle="modal" data-target="#modalDelete<%= favourite_movie.movie.id %>"><span class="fa fa-times"></span></button>
        </td>

          <!-- modalDelete -->
          <div class="modal fade" id="modalDelete<%= favourite_movie.movie.id %>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
            <div class="modal-dialog" role="document">
              <div class="modal-content">
                <div class="modal-header">
                  <h4 class="modal-title" id="myModalLabel">Delete confirmation</h4>
                </div>
                <div class="modal-body">
                  Are you sure you want to delete this movie: <br/>
                  '<%= favourite_movie.movie.title %>' by <%= favourite_movie.movie.director %>?
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-outline-secondary minebtn btn-sm" data-dismiss="modal">No</button>
                  <%= link_to 'Delete', favourite_movie, method: :delete, :class => "btn btn-outline-danger minebtn btn-sm" %>
                </div>
              </div>
            </div>
          </div>
          <!-- end of modalDelete -->

      </tr>
    <% end %>
  </tbody>
</table>

<br>
