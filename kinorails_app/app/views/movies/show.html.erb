<p id="notice"><%= modified_notice %></p>

<h2> Details of "<%= @movie.title %>"</h2>

<p>
  <strong>Title:</strong>
  <%= @movie.title %>
  <br/>
  <strong>Director:</strong>
  <%= @movie.director %>
  <br/>
  <strong>Country of origin:</strong>
  <%= @movie.country_of_origin %>
  <br/>
  <strong>Length:</strong>
  <%= @movie.length %>
  <br/>
  <strong>Poster:</strong>
  <br/>
  <%= image_tag @movie.poster_link, :height => 200, :crop => "pad" %>
  <br/>
  <a href = "<%= @movie.poster_link %>">Full view</a>
  <br/>
  <strong>Description:</strong>
  <%= @movie.description %>
</p>

<h3>Available screenings for "<%= @movie.title %>"</h3>

<table class="table table-stripped table-hover index indexborder">
  <thead>
    <tr>
      <th>Room</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @screenings.each do |screening| %>
      <tr>
        <td><%= screening.room_id %></td>
        <td><%= screening.date %></td>   
        <td align = "right"><%= link_to 'New Reservation', {:controller => "reservations", :action => "new", :current_screening_id => screening.id}, :class => "btn btn-outline-success minebtn btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<% if !current_user.nil? %>
  <% if current_user.admin? %>
    <%= link_to 'Edit', edit_movie_path(@movie), :class => "btn btn-outline-warning minebtn btn-sm" %>  &nbsp;
  <% end %>
<% end %>
<%= link_to 'Back', movies_path, :class => "btn btn-outline-danger minebtn btn-sm" %>
