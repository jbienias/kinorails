<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @movie.title %>
</p>

<p>
  <strong>Director:</strong>
  <%= @movie.director %>
</p>

<p>
  <strong>Country of origin:</strong>
  <%= @movie.country_of_origin %>
</p>

<p>
  <strong>Length:</strong>
  <%= @movie.length %>
</p>

<p>
  <strong>Poster link:</strong>
  <%= @movie.poster_link %>
</p>

<p>
  <strong>Description:</strong>
  <%= @movie.description %>
</p>

<b>Available screenings for <%= @movie.title %></b>

<table>
  <thead>
    <tr>
      <th>Room</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @screenings.each do |screening| %>
      <tr>
        <td><%= screening.room_id %></td>
        <td><%= screening.date %></td>   
        <td><%= link_to 'New Reservation', {:controller => "reservations", :action => "new", :current_screening_id => screening.id}, :class => "btn btn-outline-success minebtn btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<% if !current_user.nil? %>
  <% if current_user.admin? %>
    <%= link_to 'Edit', edit_movie_path(@movie), :class => "btn btn-outline-warning minebtn btn-sm" %> |
  <% end %>
<% end %>
<%= link_to 'Back', movies_path, :class => "btn btn-outline-danger minebtn btn-sm" %>
