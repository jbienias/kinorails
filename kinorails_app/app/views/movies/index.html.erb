<p id="notice"><%= modified_notice %></p>

<div class="divrightoriented">
      
    </div>

<table class="search">
  <thead>
    <tr>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td>
        <h1>Movies</h1>
      </td>
      <td align = "right">
        <%= form_tag(movies_path, :method => "get", id: "search-form") do %>
          <%= text_field_tag :search, params[:search], placeholder: "Search for games" %>
            <div class="btn-group minebtn btn-sm" role="group">
              <%= button_tag(type: 'submit', class: "btn btn-primary minebtn btn-sm") do %>
                <span class='fa fa-search'></span>
              <% end %>
              <%= link_to(raw('<span class="fa fa-times"></span>'), movies_path, class: 'btn btn-danger minebtn btn-sm') %>
            </div>
          <% end %>
          <% if @movies.blank? && Movie.count != 0 %>
            There are no games which name contains '<%= params[:search] %>' &emsp;
          <% end %>
          <% if Movie.count == 0 %>
            There are no games &emsp;
          <% end %>
      </td>
    </tr>
  </tbody>
</table>


<table class="table table-stripped table-hover index indexborder">
  <thead>
    <tr>
      <th class="index"><%= sort_link "title" %></th>
      <th class="index"><%= sort_link "director" %></th>
      <th class="index"><%= sort_link "length" %></th>
      <th class="index"><%= sort_link "poster_link", "Poster" %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @movies.each do |movie| %>
      <tr>
        <td><%= movie.title %></td>
        <td><%= movie.director %></td>
        <td><%= movie.length %></td>
        <td><%= image_tag movie.poster_link, :height => 50, :crop => "pad" %></td> 
        <td align = "right">
          <%= link_to(raw('<span class="fa fa-eye"></span>'), movie, :class => "btn btn-outline-secondary minebtn btn-sm") %>
          &nbsp; 
          <% if current_user != nil && current_user.admin? %>
            <%= link_to(raw('<span class="fa fa-pencil"></span>'), edit_movie_path(movie), :class => "btn btn-outline-warning minebtn btn-sm") %>
            &nbsp;
            <%= link_to(raw('<span class="fa fa-times"></span>'), movie, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-outline-danger minebtn btn-sm") %>
          <% end %>
          <% if current_user != nil && current_user.user? %>
            <%= link_to(raw('<span class="fa fa-star"></span>') ,{:controller => "favourite_movies", :action => "favourite", :current_movie_id => movie.id}, method: :put, :class => "btn btn-outline-warning minebtn btn-sm") %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if !current_user.nil? && current_user.admin? %>
  <%= link_to(raw('<b>New Movie</b><span class="fa fa-plus"></span>'), new_movie_path, :class => "btn btn-outline-success minebtn btn-sm") %>
<% end %>
